            <datadir zip="true">https://raw.githubusercontent.com/geertbongers/repository.kodi.geertbongers.nl/master/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Repository of Geert with mods of existing addons</summary>
